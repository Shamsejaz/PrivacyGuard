# Test Environment Configuration
NODE_ENV=test
PORT=3002
API_VERSION=v1

# Test Database Configuration
# PostgreSQL (use different database for tests)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=privacyguard_test
POSTGRES_USER=privacyguard_user
POSTGRES_PASSWORD=test_password
POSTGRES_MAX_CONNECTIONS=5
POSTGRES_IDLE_TIMEOUT=10000
POSTGRES_CONNECTION_TIMEOUT=2000

# MongoDB (use different database for tests)
MONGODB_URI=mongodb://localhost:27017/privacyguard_test
MONGODB_MAX_POOL_SIZE=5
MONGODB_MIN_POOL_SIZE=2
MONGODB_MAX_IDLE_TIME=10000
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# Redis (use different database for tests)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
