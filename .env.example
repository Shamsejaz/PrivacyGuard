# PrivacyGuard Development Environment Configuration

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_APP_NAME=PrivacyGuard
VITE_APP_VERSION=1.0.0

# =============================================================================
# BACKEND CONFIGURATION (for development)
# =============================================================================
NODE_ENV=development
PORT=3001
HOST=localhost

# =============================================================================
# DATABASE CONFIGURATION (for development)
# =============================================================================

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=privacyguard_dev
POSTGRES_USER=privacyguard_user
POSTGRES_PASSWORD=dev_password_123
POSTGRES_MAX_CONNECTIONS=10

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/privacyguard_dev
MONGODB_MAX_POOL_SIZE=5
MONGODB_MIN_POOL_SIZE=2

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# SECURITY CONFIGURATION (for development)
# =============================================================================

# JWT Configuration
JWT_SECRET=development_jwt_secret_at_least_32_characters_long_for_security
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
BCRYPT_ROUNDS=10

# =============================================================================
# CORS CONFIGURATION (for development)
# =============================================================================
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# =============================================================================
# LOGGING CONFIGURATION (for development)
# =============================================================================
LOG_LEVEL=debug
LOG_CONSOLE=true
LOG_FILE=false
LOG_AUDIT=true

# =============================================================================
# RATE LIMITING (for development)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# CACHE CONFIGURATION (for development)
# =============================================================================
CACHE_DEFAULT_TTL=300
CACHE_MAX_MEMORY=128mb

# =============================================================================
# BACKUP CONFIGURATION (for development)
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAILY=3

# =============================================================================
# MONITORING CONFIGURATION (for development)
# =============================================================================
MONITORING_HEALTH_CHECKS=true
MONITORING_METRICS=true
MONITORING_TRACING=false

# =============================================================================
# EMAIL CONFIGURATION (for development - optional)
# =============================================================================
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# =============================================================================
# EXTERNAL SERVICES (for development - optional)
# =============================================================================

# Python PII Service
PII_SERVICE_URL=http://localhost:8000

# Google Cloud DLP (optional)
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
SEED_DATA=true