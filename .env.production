# Production Environment Configuration
# IMPORTANT: Update these URLs to match your domain

# Application Configuration
NODE_ENV=production
DOMAIN=app.privacycomply.ai
FRONTEND_URL=https://app.privacycomply.ai

# API Configuration - Update these URLs for your domain
API_URL=https://app.privacycomply.ai/api/v1
WS_URL=wss://app.privacycomply.ai

# Database Configuration - CHANGE THESE PASSWORDS!
POSTGRES_DB=privacyguard_prod
POSTGRES_USER=privacyguard_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_POSTGRES_PASSWORD_123!
POSTGRES_MAX_CONNECTIONS=50

MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_SECURE_MONGO_PASSWORD_456!
MONGO_DB=privacyguard_prod

REDIS_PASSWORD=CHANGE_THIS_SECURE_REDIS_PASSWORD_789!

# Security Configuration - CHANGE THESE!
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_AT_LEAST_32_CHARACTERS_LONG_FOR_PRODUCTION_2024!
BCRYPT_ROUNDS=12

# SSL/TLS Configuration
FORCE_HTTPS=true
TRUST_PROXY=true

# CORS Configuration - Update to match your domain(s)
CORS_ORIGIN=https://app.privacycomply.ai,https://privacycomply.ai

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=true
LOG_AUDIT=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# PII Service (optional)
PII_SERVICE_ENABLED=false
PII_SERVICE_URL=disabled

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration (optional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30